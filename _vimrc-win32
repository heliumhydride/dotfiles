" for lightline
set laststatus=2
set noshowmode
set background=dark
let g:lightline = {
      \ 'colorscheme': 'one',
\ }
" fix ligatures on windows
set renderoptions=type:directx
set encoding=utf-8
" set backspace to 2 (non-linux systems)
set bs=2
" line numbers
set number
" dont create a ton of files
set noswapfile
set nobackup
set nowritebackup
" autodetect filetype
filetype detect
" autoindent
set smartindent
" syntax highlighting
syntax on
" auto cd to files dir
set autochdir
" show exissting tab to be 2 spaces width
set tabstop=2
" When pressing tab, print 2 spaces instead
set expandtab

" Brace+quotes autocomplete
inoremap ( ()<Esc>i
inoremap { {}<Esc>i
inoremap {<CR> {<CR>}<Esc>O
inoremap [ []<Esc>i
inoremap < <><Esc>i
inoremap ' ''<Esc>i
inoremap " ""<Esc>i

" Now time for some templates!
function Tc()
    :r ~/vimfiles/templates/Tc.c
endfunction

function Tmakefile()
    :r ~/vimfiles/templates/Tmakefile.mk
endfunction

function Tmakefile2()
    :r ~/vimfiles/templates/Tmakefile2.mk
endfunction

