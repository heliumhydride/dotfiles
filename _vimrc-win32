" set backspace to 2 (only useful for windows)
set bs=2
" line numbers
set number
" dont create a ton of files
set noswapfile
set nobackup
set nowritebackup
" autodetect filetype
filetype detect
" autoindent
set smartindent
" syntax highlighting
syntax on
" auto cd to files dir
set autochdir

" Brace+quotes autocomplete
inoremap ( ()<Esc>i
inoremap { {}<Esc>i
inoremap {<CR> {<CR>}<Esc>O
inoremap [ []<Esc>i
inoremap < <><Esc>i
inoremap ' ''<Esc>i
inoremap " ""<Esc>i

" Now time for some templates!
function Tc()
    :r ~/vimfiles/templates/Tc.c
endfunction

function Tmakefile()
    :r ~/vimfiles/templates/Tmakefile.mk
endfunction

function Tmakefile2()
    :r ~/vimfiles/templates/Tmakefile2.mk
endfunction

function Tsdlc()
    :r ~/vimfiles/templates/Tsdlc.c
endfunction

function Tpygame()
    :r ~/vimfiles/templates/Tpygame.py
endfunction
